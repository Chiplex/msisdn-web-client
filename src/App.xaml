<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:MSISDNWebClient.Converters"
             x:Class="MSISDNWebClient.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:CollectionNotEmptyConverter x:Key="CollectionNotEmptyConverter" />
            <converters:BoolToVerifiedStatusConverter x:Key="BoolToVerifiedStatusConverter" />
            <converters:BoolToVerifiedColorConverter x:Key="BoolToVerifiedColorConverter" />
            <converters:BoolToColorConverter x:Key="BoolToTabColorConverter" />
            <converters:BoolToColorConverter x:Key="InvertedBoolToTabColorConverter" Inverted="True" />
            <converters:BoolToFontAttributeConverter x:Key="BoolToFontAttributeConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
