<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Brand Palette -->
    <Color x:Key="Primary">#7C3AED</Color>
    <Color x:Key="PrimaryDark">#5B21B6</Color>
    <Color x:Key="PrimaryLight">#A78BFA</Color>
    <Color x:Key="Secondary">#10B981</Color>
    <Color x:Key="SecondaryDark">#047857</Color>
    <Color x:Key="SecondaryLight">#6EE7B7</Color>
    <Color x:Key="Accent">#EC4899</Color>
    <Color x:Key="AccentDark">#BE185D</Color>
    <Color x:Key="AccentLight">#F9A8D4</Color>

    <!-- Backgrounds -->
    <Color x:Key="PageBackground">#0F172A</Color>
    <Color x:Key="CardBackground">#1E293B</Color>
    <Color x:Key="SurfaceBackground">#334155</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#F8FAFC</Color>
    <Color x:Key="TextSecondary">#CBD5E1</Color>
    <Color x:Key="TextTertiary">#94A3B8</Color>

    <!-- State Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>

    <!-- Neutrals -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!-- Borders -->
    <Color x:Key="BorderColor">#475569</Color>
    <Color x:Key="BorderLight">#64748B</Color>

</ResourceDictionary>
