<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MSISDNWebClient.ViewModels"
             x:Class="MSISDNWebClient.Views.PersonaDetailPage"
             x:DataType="vm:PersonaDetailViewModel"
             BackgroundColor="{StaticResource PageBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                            Spacing="20">

            <Button Text="â† Volver"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    FontSize="16"
                    Margin="0,20,0,0" />

            <!-- Perfil de la persona -->
            <Frame Style="{StaticResource CardStyle}"
                   Padding="25">
                <VerticalStackLayout Spacing="20">
                    
                    <Image Source="{Binding AvatarUrl, TargetNullValue='dotnet_bot.png'}"
                           HeightRequest="150"
                           WidthRequest="150"
                           Aspect="AspectFill"
                           HorizontalOptions="Center">
                        <Image.Clip>
                            <EllipseGeometry Center="75,75"
                                           RadiusX="75"
                                           RadiusY="75" />
                        </Image.Clip>
                    </Image>

                    <Label Text="{Binding DisplayName}"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource TextPrimary}" />

                    <BoxView HeightRequest="1"
                             Color="{StaticResource Gray300}"
                             Margin="20,0" />

                    <Label Text="{Binding Bio}"
                           FontSize="16"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource TextSecondary}"
                           LineBreakMode="WordWrap"
                           Margin="10,0" />

                </VerticalStackLayout>
            </Frame>

            <!-- Enlaces sociales -->
            <Frame Style="{StaticResource CardStyle}"
                   IsVisible="{Binding Persona.Links, Converter={StaticResource CollectionNotEmptyConverter}}">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="Enlaces"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />

                    <CollectionView ItemsSource="{Binding Persona.Links}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Style="{StaticResource InfoCardStyle}"
                                       Margin="0,5"
                                       Padding="15">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Title}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextPrimary}" />
                                        <Label Text="{Binding Url}"
                                               FontSize="12"
                                               TextColor="{StaticResource Primary}"
                                               TextDecorations="Underline" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </Frame>

            <!-- PersonaID -->
            <Frame Style="{StaticResource InfoCardStyle}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="PersonaID"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextSecondary}" />
                    <Label Text="{Binding PersonaId}"
                           FontSize="11"
                           FontFamily="Monospace"
                           TextColor="{StaticResource TextSecondary}"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              Color="{StaticResource Primary}"
                              HeightRequest="40"
                              Margin="0,20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
